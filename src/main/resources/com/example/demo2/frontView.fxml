<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demo2.controller.FrontController"
            stylesheets="@style.css">

    <!-- Top menu bar -->
    <top>
        <MenuBar>
            <menus>
                <Menu text="Start">

                </Menu>
                <Menu text="Sökning">
                    <items>
                        <MenuItem text="Sök böcker..."/>
                    </items>
                </Menu>
                <Menu text="Profil">
                    <items>
                        <MenuItem text="Min profilsida"/>
                        <MenuItem text="Logga in" onAction="#onGoToLogin"/>
                    </items>
                </Menu>
                <Menu text="Hjälp">
                    <items>
                        <MenuItem text="Om"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <!-- Center content -->
    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <!-- Header label -->
            <Label text="Välkommen till bibliotekets söktjänst!"
                   styleClass="header-label"/>

            <!-- Search form -->
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="75"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="30"/>
                    <RowConstraints minHeight="30"/>
                    <RowConstraints minHeight="30"/>
                    <RowConstraints minHeight="30"/>
                    <RowConstraints minHeight="30"/>
                </rowConstraints>

                <Label text="Titel:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="titleField" promptText="Ange titel..."
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Författare:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="authorField" promptText="Ange författare..."
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="ISBN:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="isbnField" promptText="Ange ISBN..."
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Typ av media:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ChoiceBox fx:id="mediaTypeBox"
                           GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <CheckBox fx:id="availableOnlyCB" text="Visa endast tillgängliga exemplar"
                          GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Search button -->
<!--            <HBox alignment="CENTER_RIGHT">-->
<!--                <Button fx:id="searchButton" text="Sök"-->
<!--                        onAction="#onSearch"-->
<!--                        styleClass="primary-button"/>-->
<!--            </HBox>-->

            <!-- Results table -->
            <TableView fx:id="tableView" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colTitle" text="Titel" prefWidth="200"/>
                    <TableColumn fx:id="colAuthor" text="Författare" prefWidth="150"/>
                    <TableColumn fx:id="colCategory" text="Kategori" prefWidth="100"/>
                    <TableColumn fx:id="colAvailable" text="Tillgänglig" prefWidth="80"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
