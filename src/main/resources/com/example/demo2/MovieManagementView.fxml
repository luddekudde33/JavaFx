<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo2.controller.MovieManagementController">
    <children>
        <TableView fx:id="movieTable" prefWidth="600" prefHeight="400">
            <columns>
                <TableColumn fx:id="colId" text="ID"/>
                <TableColumn fx:id="colTitle" text="Titel"/>
                <TableColumn fx:id="colMainCharacter" text="Huvudkaraktär"/>
                <TableColumn fx:id="colBarcode" text="Streckkod"/>
                <TableColumn fx:id="colCategory" text="Kategori"/>
                <TableColumn fx:id="colAvailable" text="Antal"/>
                <TableColumn fx:id="colLocation" text="Plats"/>
            </columns>
        </TableView>
        <Button text="Lägg till film" onAction="#onAddMovie" layoutX="620" layoutY="50"/>
        <Button text="Redigera film" onAction="#onEditMovie" layoutX="620" layoutY="100"/>
        <Button text="Ta bort film" onAction="#onDeleteMovie" layoutX="620" layoutY="150"/>
        <Button text="← Tillbaka"  onAction="#goBack" layoutX="620" layoutY="200"/>
    </children>
</AnchorPane>